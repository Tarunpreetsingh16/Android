<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="Select Contacts"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="30dp"/>

    <TextView
        android:id="@+id/txtFirstContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="First Contact"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorAccent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/firstContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:padding="20dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/txtFirstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tarunpreet Singh"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtFirstNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+14372411459" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/btnAddFirst"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/plus" />

        <ImageButton
            android:id="@+id/btnRemoveFirst"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:backgroundTint="#00FFFFFF"
            android:visibility="gone"
            app:srcCompat="@drawable/minus" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtSecondContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Second Contact"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorAccent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/secondContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:padding="20dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/txtSecondName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tarunpreet Singh"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtSecondNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+14372411459" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/btnAddSecond"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/plus" />

        <ImageButton
            android:id="@+id/btnRemoveSecond"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:backgroundTint="#00FFFFFF"
            android:visibility="gone"
            app:srcCompat="@drawable/minus" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtThirdContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Third Contact"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorAccent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/thirdContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:padding="20dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/txtThirdName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tarunpreet Singh"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtThirdNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+14372411459" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/btnAddThird"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/plus" />

        <ImageButton
            android:id="@+id/btnRemoveThird"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:backgroundTint="#00FFFFFF"
            android:visibility="gone"
            app:srcCompat="@drawable/minus" />

    </LinearLayout>

</LinearLayout>