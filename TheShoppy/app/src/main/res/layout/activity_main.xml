<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#28887575"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/colorPrimaryDark"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardHeader"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/txtName"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorPrimary"
                            android:fontFamily="@font/cambay"
                            android:gravity="center"
                            android:text="Name"
                            android:textColor="#ffffff"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/editName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:alpha=".50"
                            android:background="@drawable/depth_effect"
                            android:ems="10"
                            android:fontFamily="@font/cambay"
                            android:gravity="center_horizontal|left|center_vertical"
                            android:hint="John"
                            android:inputType="textPersonName"
                            android:padding="10dp"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/txtProvince"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0"
                            android:background="@color/colorPrimary"
                            android:fontFamily="@font/cambay"
                            android:gravity="center"
                            android:text="Province"
                            android:textColor="#ffffff"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <AutoCompleteTextView
                            android:id="@+id/editProvince"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:alpha=".50"
                            android:background="@drawable/depth_effect"
                            android:completionThreshold="2"
                            android:ems="10"
                            android:fontFamily="@font/cambay"
                            android:gravity="center_horizontal|left|center_vertical"
                            android:hint="ON"
                            android:inputType="textAutoComplete"
                            android:padding="10dp"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/txtDate"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0"
                            android:background="@color/colorPrimary"
                            android:fontFamily="@font/cambay"
                            android:gravity="center"
                            android:text=" Date"
                            android:textColor="#ffffff"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/editDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:background="@drawable/depth_effect"
                            android:ems="10"
                            android:enabled="false"
                            android:fontFamily="@font/cambay"
                            android:gravity="center_horizontal|left|center_vertical"
                            android:inputType="date|textPersonName"
                            android:padding="10dp"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btnChooseDate"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="0.8"
                            android:background="@drawable/border_effect"
                            android:backgroundTint="@color/colorAccent"
                            android:fontFamily="@font/cambay"
                            android:gravity="center"
                            android:text="Choose Date"
                            android:textColor="@android:color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/txtComputerType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryDark"
                            android:fontFamily="@font/cambay"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="Computer Type"
                            android:textColor="#ffffff"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/radioGrpType"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/depth_effect_3sides"
                            android:backgroundTint="@color/colorPrimary"
                            android:orientation="horizontal"
                            android:padding="10dp">

                            <RadioButton
                                android:id="@+id/radioBtnDesktop"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:backgroundTint="#BDB3B3"
                                android:buttonTint="@android:color/white"
                                android:fontFamily="@font/cambay"
                                android:text="Desktop"
                                android:textColor="@android:color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <RadioButton
                                android:id="@+id/radioBtnLaptop"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:backgroundTint="#BDB3B3"
                                android:buttonTint="@android:color/white"
                                android:fontFamily="@font/cambay"
                                android:text="Laptop"
                                android:textColor="@android:color/white"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </RadioGroup>

                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardDesktops"
                android:fillViewport="true"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="50dp"
                android:visibility="gone"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="400dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/txtDesktopLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryDark"
                            android:fontFamily="@font/cambay"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="Desktop Showcase"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtDellDesktop"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimary"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="@string/dell"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/imgDellDesktop"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/dell_desktop" />

                        <TextView
                            android:id="@+id/txtHpDesktop"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimary"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="@string/hp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/imgHpDesktop"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/hp_desktop" />


                        <TextView
                            android:id="@+id/txtLenovoDesktop"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimary"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="@string/lenova"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/imgLenovoDesktop"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            app:srcCompat="@drawable/lenovo_desktop" />

                    </LinearLayout>
                </ScrollView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardLaptops"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="50dp"
                android:visibility="gone"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:fillViewport="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/txtLaptopLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryDark"
                            android:fontFamily="@font/cambay"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="Laptop Showcase"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtDellLaptop"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimary"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="@string/dell"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/imgDellLaptop"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/dell_laptop" />

                        <TextView
                            android:id="@+id/txtHpLaptop"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimary"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="@string/hp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/imgHpLaptop"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/hp_laptop" />


                        <TextView
                            android:id="@+id/txtLenovoLaptop"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimary"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="@string/lenova"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/imgLenovoLaptop"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            app:srcCompat="@drawable/lenovo_laptop" />

                    </LinearLayout>
                </ScrollView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardComputerDetails"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="50dp"
                android:visibility="visible"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/txtAssembleLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimaryDark"
                        android:fontFamily="@font/cambay"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Assemble"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimary"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/txtBrand"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/cambay"
                            android:gravity="center"
                            android:text="Brand"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/spinnerBrand"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:backgroundTint="#ffffff"
                            android:fontFamily="@font/cambay"
                            android:textSize="16sp"
                            android:paddingLeft="5dp"
                            android:layout_marginLeft="5dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtAddOn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cambay"
                        android:text="Add On"
                        android:textColor="@android:color/black"
                        android:textColorHint="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="5dp"
                        android:gravity="center|left"/>

                    <CheckBox
                        android:id="@+id/chkSSD"
                        android:layout_width="match_parent"
                        android:alpha="0.5"
                        android:layout_height="wrap_content"
                        android:text="SSD"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <CheckBox
                        android:id="@+id/chkPrinter"
                        android:alpha="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Printer"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>